<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:app="http://schemas.android.com/apk/res-auto"
           xmlns:tools="http://schemas.android.com/tools"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#E8E0E0"
           tools:context=".Feedback">

    <include
            android:id="@+id/toolbarr"
            layout="@layout/app_bar_layout3"

    ></include>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inbox"
            android:textSize="40dp"
            android:textColor="@color/inboxTitles"
            android:textStyle="bold"
            android:textAlignment="center"

    >

    </TextView>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">




    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent "
            android:height="70dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textAlignment="gravity"
            android:padding="20dp"
            android:textColor="@color/inboxTitles"
            android:background="#ED4BC0"

    >
    </TextView>



    <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/appointmentLayout"
            android:layout_height="100dp"

            android:orientation="vertical"
            >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appointments"
            android:height="30dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:paddingStart="30dp"

            android:textColor="@color/inboxTitles"
    ></TextView>

        <TextView

                android:text="See past appoinetments here"
                android:id="@+id/appointmentText"

                android:textSize="20dp"
                android:height="100dp"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:textColor="@color/inboxContent"
                android:layout_marginStart="50dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:orientation="vertical"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Health"
                android:height="30dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:paddingEnd="5dp"
                android:paddingStart="30dp"
                android:textColor="@color/inboxTitles"
        ></TextView>
        <TextView

                android:text="See your health status details here"
                android:textSize="20dp"
                android:id="@+id/myhealthtext"
                android:height="100dp"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:textColor="@color/inboxContent"
                android:layout_marginStart="50dp"
                android:paddingEnd="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:orientation="vertical"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dosage"

                android:height="30dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:paddingStart="30dp"
                android:textColor="@color/inboxTitles"
        ></TextView>
        <TextView

                android:text="Dosages you are taking "
                android:textSize="20dp"
                android:id="@+id/dosagetext"
                android:height="100dp"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="5dp"
                android:textColor="@color/inboxContent"
                android:layout_marginStart="50dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:orientation="vertical"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TIPS"
                android:height="30dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:paddingStart="30dp"

                android:textColor="@color/inboxTitles"
        ></TextView>
        <TextView

                android:text="Check Today's Tips here..."
                android:textSize="20dp"
                android:height="100dp"
            android:id="@+id/tipstext"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="5dp"
                android:textColor="@color/inboxContent"
                android:layout_marginStart="50dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:orientation="vertical"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RECOMENDATION"
                android:height="30dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:paddingStart="30dp"
                android:textColor="@color/inboxTitles"
        ></TextView>
        <TextView

                android:text="See some Healthy Recommendations"
                android:textSize="20dp"
                android:height="100dp"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="5dp"
            android:id="@+id/recommendationtext"
                android:textColor="@color/inboxContent"
                android:layout_marginStart="50dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
           android:layout_height="50dp"

           android:orientation="vertical">

    </LinearLayout>

    </LinearLayout>

    </ScrollView>


</LinearLayout>