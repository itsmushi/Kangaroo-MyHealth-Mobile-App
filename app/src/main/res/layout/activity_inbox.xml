<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:app="http://schemas.android.com/apk/res-auto"
           xmlns:tools="http://schemas.android.com/tools"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#E8E0E0"
           tools:context=".Feedback">

    <include
            android:id="@+id/toolbarr"
            layout="@layout/app_bar_layout3"

    ></include>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inbox"
            android:textSize="40dp"
            android:textColor="@color/inboxTitles"
            android:textStyle="bold"
            android:textAlignment="center"

    >

    </TextView>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">




    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent"
            android:height="100dp"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textAlignment="gravity"
            android:padding="20dp"
            android:textColor="@color/inboxTitles"
            android:background="#ED4BC0"
    >
    </TextView>
    <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/appointmentLayout"
            android:layout_height="100dp"
            android:background="#8EEFDF"
            android:orientation="vertical"
            >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appointments"
            android:height="30dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:paddingStart="30dp"
            android:textColor="@color/inboxTitles"
    ></TextView>

        <TextView

                android:text=""
                android:id="@+id/appointmentText"
                android:textSize="20dp"
                android:height="100dp"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:textColor="@color/inboxContent"
                android:layout_marginStart="50dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#D49BD8"
            android:orientation="vertical"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Health"
                android:height="30dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:paddingEnd="5dp"
                android:paddingStart="30dp"
                android:textColor="@color/inboxTitles"
        ></TextView>
        <TextView

                android:text="Here are  the results from your last..."
                android:textSize="20dp"
                android:height="100dp"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:textColor="@color/inboxContent"
                android:layout_marginStart="50dp"
                android:paddingEnd="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#99A5F1"
            android:orientation="vertical"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dosage"

                android:height="30dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:paddingStart="30dp"
                android:textColor="@color/inboxTitles"
        ></TextView>
        <TextView

                android:text="Remminding you to take  your afternoon suppliments"
                android:textSize="20dp"
                android:height="100dp"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="5dp"
                android:textColor="@color/inboxContent"
                android:layout_marginStart="50dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#52B888"
            android:orientation="vertical"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TIPS"
                android:height="30dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:paddingStart="30dp"

                android:textColor="@color/inboxTitles"
        ></TextView>
        <TextView

                android:text="Dear mother we would like to..."
                android:textSize="20dp"
                android:height="100dp"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="5dp"
                android:textColor="@color/inboxContent"
                android:layout_marginStart="50dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#C3EA84"
            android:orientation="vertical"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RECOMENDATION"
                android:height="30dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:paddingStart="30dp"
                android:textColor="@color/inboxTitles"
        ></TextView>
        <TextView

                android:text="Dear mother we recommend you to visit Miko Dispensary"
                android:textSize="20dp"
                android:height="100dp"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="5dp"
                android:textColor="@color/inboxContent"
                android:layout_marginStart="50dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
           android:layout_height="50dp"
           android:background="#ED4BC0"
           android:orientation="vertical">

    </LinearLayout>

    </LinearLayout>

    </ScrollView>


</LinearLayout>